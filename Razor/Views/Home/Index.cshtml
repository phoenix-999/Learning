
@model IEnumerable<Product>;

@{
    ViewBag.Title = "Product Name";
}

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in @Model)
        {
            <tr>
                <td>@p?.Name</td>
                <td>@($"{@p.Price:C2}")</td>
            </tr>
        }
    </tbody>
</table>

