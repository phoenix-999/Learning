@model Product

<div class="card m-1 p-1">
    <div class="bg-info p-1">
        <h4>@Model.Name</h4>
        <span class="badge badge-pill badge-primary" style="float:right">
            <small>@Model.Price.ToString("C")</small>
        </span>
    </div>
    <div class="card-body">@Model.Description</div>
</div>
