@model IEnumerable<ProtectedDocument>

<div class="bg-primary m-1 p-1 text-white"><h4>Documents (@User?.Identity?.Name)</h4></div>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Editor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(ProtectedDocument doc in Model)
        {
            <tr>
                <td>@doc.Title</td>
                <td>@doc.Author</td>
                <td>@doc.Editor</td>
                <td><a class="btn btn-secondary" asp-action="Edit" asp-route-title="@doc.Title">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

